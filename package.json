{
  "name": "partio",
  "version": "1.0.0",
  "description": "SaaS de gastos compartidos - Monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" run dev",
    "build": "pnpm --recursive --filter \"./apps/*\" run build",
    "start:api": "pnpm --filter api run start",
    "start:web": "pnpm --filter web run dev",
    "start:mobile": "pnpm --filter mobile run start",
    "migrate:dev": "pnpm --filter api run migrate:dev",
    "migrate:deploy": "pnpm --filter api run migrate:deploy",
    "seed": "pnpm --filter api run seed",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm --recursive run test",
    "test:watch": "pnpm --recursive run test:watch",
    "clean": "pnpm --recursive run clean && rm -rf node_modules",
    "docker:dev": "docker-compose -f infra/docker/docker-compose.yml up --build",
    "docker:down": "docker-compose -f infra/docker/docker-compose.yml down"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6"
}
